{
  "name": "catendar",
  "description": "Catendar",
  "author": {
    "name": "One Coding Sheep"
  },
  "version": "1.0.0",
  "main": "main.js",
  "private": false,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "npm run build -- -c production",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "pack": "build --dir",
    "dist": "build",
    "electron": "electron main.js",
    "postinstall": "install-app-deps",
    "production:windows": "npm run build:prod && electron-builder build -w --publish never",
    "production:linux": "npm run build:prod && electron-builder build -m --publish never",
    "production:macos": "npm run build:prod && electron-builder build -l --publish never"
  },
  "build": {
    "appId": "gr.codingsheep.catendar",
    "productName": "Catendar",
    "win": {
      "icon": "./src/assets/icon.png"
    },
    "linux": {
      "icon": "./src/assets/icon.png"
    },
    "mac": {
      "icon": "./src/assets/icon.png"
    },
    "files": [
      "./src/public",
      "./dist/**/*",
      "./main.js"
    ]
  },
  "dependencies": {
    "@angular/animations": "~9.1.1",
    "@angular/common": "~9.1.1",
    "@angular/compiler": "~9.1.1",
    "@angular/core": "~9.1.1",
    "@angular/forms": "~9.1.1",
    "@angular/localize": "~9.1.1",
    "@angular/platform-browser": "~9.1.1",
    "@angular/platform-browser-dynamic": "~9.1.1",
    "@angular/router": "~9.1.1",
    "bootstrap": "^4.4.0",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.1",
    "@angular-guru/electron-builder": "^8.0.0",
    "@angular/cli": "~9.1.1",
    "@angular/compiler-cli": "~9.1.1",
    "@angular/language-service": "~9.1.1",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "protractor": "~5.4.3",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.8.3"
  }
}
